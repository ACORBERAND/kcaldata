<div class="container " id="<%= dom_id boeuf %>">


  <img src="<%= boeuf.image %>" alt="">
  <!-- Première partie de la carte recette avec le temps, la difficulté et le nombre de Kcal-->
  <div class="intro">
    <div class="icone">
      <img src="https://cdn-icons-png.flaticon.com/512/3003/3003126.png" alt="icone timer">
      <p>
        <%= boeuf.duration %>min
      </p>
    </div>
    <div class="icone">
      <h3>
        <strong>Difficulté</strong>
      </h3>
      <p>
        <%= boeuf.difficult %>
      </p>
    </div>
    <div class="icone">
      <h3>
        <strong>Kcal</strong>
      </h3>
      <p>
        <%= boeuf.kcal %>
      </p>
    </div>
  </div>

  <p>
    <strong>Name:</strong>
    <%= boeuf.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= boeuf.description %>
  </p>

  <p>
    <strong>Carbohydrates:</strong>
    <%= boeuf.carbohydrates %>g
  </p>

  <p>
    <strong>Proteins:</strong>
    <%= boeuf.proteins %>g
  </p>

  <p>
    <strong>Lipids:</strong>
    <%= boeuf.lipids %>g
  </p>

  <p>
    <strong>Ingredient:</strong>
    <%= boeuf.ingredient %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= boeuf.quantity %>g
  </p>

  <p>
    <strong>Step:</strong>
    <%= boeuf.step %>
  </p>

  <p>
    <strong>Step description:</strong>
    <%= boeuf.step_description %>
  </p>

</div>
